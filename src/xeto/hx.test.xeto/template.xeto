//////////////////////////////////////////////////////////////////////////
// Bind
//////////////////////////////////////////////////////////////////////////

testTemplateBindA: Template {
  s: Str

  returns: Dict {
    dis: "Test"
    foo
    x: Bind <var:"s">
    y: Number 123
  }
}

//////////////////////////////////////////////////////////////////////////
// If
//////////////////////////////////////////////////////////////////////////

testTemplateIfA: Template {
  cond: Bool

  returns: Dict {
    If <var:"cond"> {
      dis: "cond is true"
    }
  }
}

testTemplateIfB: Template {
  cond: Bool

  returns: Dict {
    If <var:"cond"> {
      dis: "cond is true"
      yea
    }
    Else {
      dis: "cond is false"
      nay
    }
  }
}

//////////////////////////////////////////////////////////////////////////
// Switch
//////////////////////////////////////////////////////////////////////////

testTemplateSwitchA: Template {
  cond: Str

  returns: Switch <var:"cond"> {
    Case <match:"a"> {
      Dict { dis:"case a" }
    }
    Case <match:"b"> {
      Dict { dis:"case b" }
    }
    Default {
      Dict { dis:"case default" }
    }
  }
}

//////////////////////////////////////////////////////////////////////////
// Foreach
//////////////////////////////////////////////////////////////////////////

testTemplateForeachA: Template {
  list: List<of:Str>

  returns: Foreach <var:"list"> {
    Dict { dis: Bind <var:"it"> }
  }
}

testTemplateForeachB: Template {
  list: List<of:Str>

  returns: Dict {
    Foreach <var:"list"> {
      Dict { dis: Bind <var:"it"> }
    }
  }
}

